<!DOCTYPE html>
<html>
  <head>
    <title>CosmeBox</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/d0ba5b4acd.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>

    <% if user_signed_in? %>
      <div class="search_form">
        <%= form_with(scope: :search, url: search_path, method: :get, local: true) do |fs| %>
          <%= fs.hidden_field :range, :value => "User" %>
          <%= fs.label :"パーソナルカラー" %>
          <%= fs.select :personal_color, User.personal_colors_i18n.invert.to_a, include_blank: true %>
          <%= fs.label :"肌タイプ" %>
          <%= fs.select :skin_quality, User.skin_qualities_i18n.invert.to_a, include_blank: true %>
          <i class="fas fa-search"></i>
          <%= fs.text_field :keyword1 %>
          <%= fs.submit "ユーザー検索", class: "btn btn-primary" %>
        <% end %>
        <%= form_with(scope: :search, url: search_path, method: :get, local: true) do |f| %>
          <%= f.hidden_field :range, :value => "PostReview" %>
          <%= f.label :"カテゴリ" %>
          <%= f.select :item_genre, PostReview.item_genres.invert.to_a, include_blank: true %>
          <i class="fas fa-search"></i><%= f.text_field :keyword2 %>
          <%= f.submit "アイテム検索", class: "btn btn-primary" %>
        <% end %>
      </div>
    <% end %>

    <% if user_signed_in? %>
      <li>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      </li>
    <% else %>
      <li>
        <%= link_to "新規登録", new_user_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_user_session_path %>
      </li>
    <% end %>
    </header>

    <%= yield %>
  </body>
</html>
