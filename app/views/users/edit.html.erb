<h4>ユーザー情報編集</h4>

<%= form_with model: @user, url: user_update_information_path do |f| %>

  <%= f.file_field :profile_image, placeholder: "profile画像", accept: "image/*" %>

  <div class="field">
    <%= f.label :"ニックネーム" %><br />
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.label :"生年月日" %><br />
    <%= f.text_field :birthday %>
  </div>

  <div class="field">
    <%= f.label :"性別" %><br />
    <%= f.select :sex, User.sexes.keys %>
  </div>

  <div class="field">
    <%= f.label :"パーソナルカラー" %><br />
    <%= f.select :personal_color, User.personal_colors.keys %>
  </div>

  <div class="field">
    <%= f.label :"肌タイプ" %><br />
    <%= f.select :skin_quality, User.skin_qualities.keys %>
  </div>

  <div class="field">
    <%= f.label :"ひとこと" %><br />
    <%= f.text_field :introduction %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "編集する" %>
  </div>
<% end %>
