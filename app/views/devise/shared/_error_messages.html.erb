<% if resource.errors.any? %>
  <div class="text-center bg-warning">
    <h2>
      <%= @user.errors.count %>件のエラーが発生しました
    </h2>
    <ul class="list-unstyled">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
